<div class="large-6 columns large-centered black">
  <%= form_for @venue do |f| %>
    <div class="row">

      <%= f.hidden_field :owner_id, value: current_owner.id %>

      <div class="row">
        <div class="large-12 columns">
          <%= f.text_field :name , placeholder: "Venue Name"  %>
        </div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <%= f.text_field :street_address_1, placeholder: "Street Address" %>
        </div>
      </div>

      <div class="row">
        <div class="large-12">
          <div class="large-4 columns">
            <%= select_tag :state, options_for_select(us_states) %>
          </div>
          
          <div class="large-4 columns">
            <%= f.text_field :city, placeholder: "City" %>
          </div>

          <div class="large-4 columns">
              <%= f.text_field :zip, placeholder: "Zip Code"%>
          </div>
          
        </div>
      </div>
      <div class="row">
        <div class="large-12">
          <div class="large-6 columns">
          <%= f.text_field :website, placeholder: "Venue Website" %>
          </div>
          <div class="large-6 columns">
          <%= f.text_field :phone, placeholder: "Venue Phone Number"%>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <%= f.text_field :ticket_link, placeholder: "Link to Ticket Sales" %>
        </div>
      </div>
      <div class="row">
        <div class="large-12">
          <div class="large-6 columns">
            <%= f.file_field :photo, :class => "button"%>
          </div>
          <div class="large-6 columns">
            <%= f.submit :class => "button-2" %>
          </div>
        </div> 
      </div>
    </div>
  <% end %>
</div>
