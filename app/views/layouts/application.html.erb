      </ul>

        <section class="top-bar-section">
          <!-- Right Nav Section -->
          <ul class="right">
            <li class="active"><a href="#">SIGNUP</a></li>
            <li class="active"><a href="#">LOGIN</a></li>
            <li class="has-dropdown">
              <a href="#">Navigation</a>
              <ul class="dropdown">
