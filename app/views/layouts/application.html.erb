                <li><a href="#"><%= link_to 'Owners index', owners_path %></a></li>
                <li><a href="#"><%= link_to 'Performance index', performances_path %></a></li>
                <li><a href="#"><%= link_to 'Venues index', venues_path %></a></li>
              </ul>
            </li>
          </ul>
    
          <!-- Left Nav Section -->
    <!-- <ul class="left">
            <li><a href="#">Left Nav Button</a></li>
          </ul> -->
        </section>
      </nav>
<!--     </div> -->


    <%= yield %>
    <%= javascript_include_tag "application" %>
  </body>
</html>